# Environment Variables Template
# Copy this file to .env.local and fill in your values

# ===========================================
# Database
# ===========================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/webbuilder"
REDIS_URL="redis://localhost:6379"

# ===========================================
# Authentication (NextAuth.js)
# ===========================================
NEXTAUTH_SECRET="generate-a-secure-secret-here-use-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ===========================================
# Rate Limiting (Upstash Redis)
# ===========================================
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# ===========================================
# AI Services
# ===========================================
# OpenAI - Required for AI features
OPENAI_API_KEY="sk-..."
OPENAI_ORG_ID=""

# Model Configuration
OPENAI_MODEL_CHAT="gpt-4-turbo-preview"
OPENAI_MODEL_FAST="gpt-3.5-turbo"
OPENAI_MODEL_EMBEDDING="text-embedding-3-small"

# Optional: Alternative LLM Providers
ANTHROPIC_API_KEY=""
GOOGLE_AI_API_KEY=""

# ===========================================
# Image Generation
# ===========================================
# OpenAI DALL-E
DALLE_ENABLED="true"

# Stability AI (alternative)
STABILITY_API_KEY=""

# ===========================================
# Payments (Stripe)
# ===========================================
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PUBLISHABLE_KEY=""
# Configure these with your actual Stripe price IDs
STRIPE_PRICE_ID_PRO=""
STRIPE_PRICE_ID_BUSINESS=""

# ===========================================
# Email (for verification and password reset)
# ===========================================
EMAIL_SERVER="smtp://user:pass@smtp.example.com:587"
EMAIL_FROM="noreply@webbuilder.app"

# ===========================================
# Storage (S3-compatible)
# ===========================================
S3_BUCKET="webbuilder-assets"
S3_REGION="us-east-1"
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
S3_ENDPOINT="" # Optional: for S3-compatible services like R2, MinIO

# CDN
CDN_URL=""

# ===========================================
# Deployment Services
# ===========================================
# Vercel
VERCEL_TOKEN=""
VERCEL_ORG_ID=""

# Netlify
NETLIFY_TOKEN=""

# ===========================================
# Analytics & Monitoring
# ===========================================
# Sentry
SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# PostHog
POSTHOG_API_KEY=""
POSTHOG_HOST=""

# ===========================================
# Feature Flags
# ===========================================
FEATURE_AI_ENABLED="true"
FEATURE_COLLABORATION_ENABLED="false"
FEATURE_IMAGE_GENERATION_ENABLED="true"

# ===========================================
# Application
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===========================================
# Development
# ===========================================
NODE_ENV="development"
LOG_LEVEL="debug"
